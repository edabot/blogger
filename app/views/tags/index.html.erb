<h1>Tags!</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag), class: 'tag_name' %>
      <%= link_to "Delete", tag_path(tag), method: :delete,
          data: { confirm: "Are you sure you want to delete this?"} %>

    </li>
  <% end %>
</ul>

